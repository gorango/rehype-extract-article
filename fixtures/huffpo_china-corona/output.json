            "properties": {
              "href": "https://www.nytimes.com/2020/02/09/world/asia/coronavirus-china.html?action=click&pgtype=Article&state=default&module=styln-coronavirus&variant=show&region=TOP_BANNER&context=storyline_menu#link-1f3fc778",
              "rel": [
                "noopener",
                "noreferrer"
              ]
            },
